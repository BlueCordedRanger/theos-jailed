#!/bin/bash

# Print init message if $1 is not empty
[ -n "$1" ] && printf "\e[1;31m> \e[1;3;39m$1…\e[m\n"

function log_raw { printf "\e[0;3$1m==> \e[1;39m$2\e[m\n"; }
function log { log_raw "$1" "$2…"; }
function success { log_raw 6 "$1"; }
function error { printf "\e[0;31m==> \e[1;31mError:\e[m $1\n"; exit 1; }
